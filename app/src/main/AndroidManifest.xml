<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csi.fhict.org.gamegadget">
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".BasicTimer"   android:screenOrientation="portrait"/>
        <activity android:name=".DDscreen"   android:screenOrientation="portrait" />
        <activity android:name=".MTGscreen"   android:screenOrientation="portrait"/>
        <activity android:name=".BPscreen"  android:screenOrientation="portrait" />
        <activity android:name=".Dice"  android:screenOrientation="portrait"/>

    </application>

</manifest>